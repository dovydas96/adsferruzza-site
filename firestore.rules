rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'adpasticceriasferruzza@gmail.com';
    }

    // Public blog posts: anyone can read, only admin can write
    match /posts/{doc} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      allow write: if isAdmin();
    }

    // Public featured products list: anyone can read, only admin can write
    match /featured/{doc} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      allow write: if isAdmin();
    }

    // Gallery metadata: anyone can read image entries, only admin can write
    match /gallery/{doc} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      allow write: if isAdmin();
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
