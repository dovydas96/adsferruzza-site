# Cache aggressively for static assets, lightly for HTML and dynamic data
# Specific patterns take precedence over the catch-all. Supported by Cloudflare Pages.

# JSON data should refresh frequently (reviews/instagram)
/data/*.json
  Cache-Control: public, max-age=300, s-maxage=300, stale-while-revalidate=30

# Blog JSON should also refresh frequently
/blog/*.json
  Cache-Control: public, max-age=300, s-maxage=300, stale-while-revalidate=30

# CSS and JS can be cached for a year with immutable hashes (filenames rarely change here, but safe)
/*.css
  Cache-Control: public, max-age=31536000, immutable
/*.js
  Cache-Control: public, max-age=31536000, immutable

# Images are safe to cache for a long time
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Admin should not be indexed or cached
/admin.html
  X-Robots-Tag: noindex, nofollow
  Cache-Control: no-store

# Coming soon page should not be cached or indexed
/coming-soon.html
  X-Robots-Tag: noindex, nofollow
  Cache-Control: no-store

# Fallback: HTML and everything else should revalidate every request
/*
  Cache-Control: public, max-age=0, must-revalidate
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  X-Frame-Options: DENY
